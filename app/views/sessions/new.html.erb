<% provide(:title, "Sign In") %>
<h1>Sign in</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(:session, url: sessions_path) do |f| %>
			
			<%= f.label :email %>
			<%= f.text_field :email, class: "input-lg" %>
			
			<%= f.label :password %>
			<%= f.password_field :password, class: "input-lg" %>
			
			<%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
			
		<% end %> <br/>
		<p><%= link_to "Forgot Password?", reset_path %></p>
	</div>
</div>