<% provide(:title, "Question Details") %>

<div class="row">
	<div class="col-md-9 col-md-offset-2">
		<h3>
			<%= @question.id %>. <%= @question.content %>
		</h3>
		
		<hr />
		
		<ul style="list-style: upper-latin; font-size: 1.1em">
		<% @question.answers.each do |answer| %>
			<%= render answer %>
		<% end %>
		<button class="btn btn-primary" data-toggle="modal" data-target="#addModal">Add Answer</button>
		</ul>
		<hr />
		<p>
		  <strong>Type:</strong>
		  <%= @question.question_type %>
		</p>
		
		<p>
		  <strong>Category:</strong>
		  <%= @question.category %>
		</p>
		
		<p>
		  <strong>Product:</strong>
		  <%= Product.find(@question.product_id).name %>
		</p>
		
		<p>
		  <strong>Section:</strong>
		  <%= @question.section %>
		</p>
		
		<p>
		  <strong>Active:</strong>
		  <%= @question.active %>
		</p>
	</div>
</div>

<hr />

<!-- Add Answer Modal -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="addModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
    	<div class="modal-header">
    		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    		<h4 class="modal-title">New Answer</h4>
    	</div>
    	<div class="modal-body">
		    <%= render 'new_answer' %>
    	</div>
    </div>
  </div>
</div>

<!-- Edit Answer Modal -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="editModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
    	<div class="modal-header">
    		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    		<h4 class="modal-title">Edit Answer</h4>
    	</div>
    	<div class="modal-body">
		    <%= render 'edit_answer' %>
    	</div>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
