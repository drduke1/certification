<h1>New question</h1>

<%= form_for(@question) do |f| %>

	<%= render 'shared/error_questions' %>

  <%= render 'form', f: f %>
 
<h1>Answers</h1>

  <%= f.fields_for :answers do |builder| %>
  	<%= render 'four_answers', :f => builder %>
  <% end %>

  <%= f.submit "Create Question", class: "btn btn-lg btn-primary" %>
<% end %>

<hr />

<%= link_to 'Back', questions_path %>