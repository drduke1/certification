<tr>
	<td>
	<%= link_to "#{question.id}. #{question.content}", question %>
	</td>
	<div class="pull-right">
		<td><small><%= User.find(question.user_id).name %></small></td>
		<td><small><%= question.question_type %></small></td>
		<td><small><%= Product.find(question.product_id).name %></small></td>
		<td>
		<%= link_to question do %>
			<i class="glyphicon glyphicon-zoom-in"></i>
		<% end %>
		<%= link_to edit_question_path(question) do %>
			<i class="glyphicon glyphicon-pencil"></i>
		<% end %>
		<%= link_to question, method: :delete, data: { confirm: 'Are you sure?' } do %>
			<i class="glyphicon glyphicon-trash"></i>
		<% end %>
		</td>
	</div>
	
</tr>